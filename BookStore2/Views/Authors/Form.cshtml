@using BookStore2.ViewModel

@section Title {

Categories
}

@model AuthorFormVM

<div class="card card-primary">
   
    <form asp-controller="Authors" class="form">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Author Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>

        <div class="card-footer">

          
            

            <button type="submit" class="btn btn-primary btn-js">
                @section Scripts {
                    <script>
                       var result = document.querySelector(".form").getAttribute("action");
                        console.log(result);
                        if (result == "/Authors/Create") {
                            document.querySelector(".btn-js").innerHTML = "Add"

                        }
                        else {
                            document.querySelector(".btn-js").innerHTML = "update"
                        }

                    </script>
                }
            </button>
        </div>
    </form>
</div>

